{
    "tasks": [
        {
            "label": "GenerateCMakeConfigs",
            "type": "shell",
            "command": "cmake",
            "args": [
                "-H.",
                "-Bbuild"
            ],
            "dependsOn": "Clean",
        },
        {
            "label": "Clean",
            "type": "shell",
            "command": "rm -rf build",
        },
        {
            "label": "CMakeSetDebug",
            "type": "shell",
            "command": "cmake",
            "args": [
                "-DCMAKE_BUILD_TYPE=Debug",
                "."
            ],
            "options": {
                "cwd": "${workspaceFolder}/build"
            },
            "dependsOn": "GenerateCMakeConfigs",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "label": "CMakeSetRelease",
            "type": "shell",
            "command": "cmake",
            "args": [
                "-DCMAKE_BUILD_TYPE=Release",
                "."
            ],
            "options": {
                "cwd": "${workspaceFolder}/build"
            },
            "dependsOn": "GenerateCMakeConfigs",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "label": "BuildDebug",
            "type": "shell",
            "command": "make",
            "options": {
                "cwd": "${workspaceFolder}/build"
            },
            "args": [
            ],
            "dependsOn": "CMakeSetDebug",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "label": "BuildRelease",
            "type": "shell",
            "command": "make",
            "options": {
                "cwd": "${workspaceFolder}/build"
            },
            "dependsOn": "CMakeSetRelease",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        },
    ],
    "version": "2.0.0"
}